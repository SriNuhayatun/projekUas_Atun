@model BlogDashboard

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <div class="card-header">
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID Member</th>
                            <th>Nama</th>
                            <th>Jenis Kelamin</th>
                            <th>Alamat</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.memberr)
                        {
                            <tr>

                                <td>
                                    @item.Id_Member
                                </td>
                                <td>
                                    @item.NamaMember
                                </td>
                                <td>
                                    @item.JenisKelamin
                                </td>
                                <td>
                                    @item.Alamat
                                </td>
                                <td>
                                    @item.Image
                                </td>
                                <td>
                                    <a asp-action="Ubah" asp-route-id="@item.Id_Member">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id_Member">Details</a>
                                    <a asp-action="Hapus" asp-route-id="@item.Id_Member" title="Keluar" style="color:red"
                                       onclick="if (!confirm('Yakin Akan Menghapus Data Ini ? ')) { return false;}">Delete</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
