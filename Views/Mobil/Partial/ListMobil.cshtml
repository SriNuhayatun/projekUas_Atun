@model MobilDashboard

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <div class="card-header">
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID Mobil</th>
                            <th>Nama Mobil</th>
                            <th>Merk</th>
                            <th>Status</th>
                            <th>Harga</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.mobill)
                        {
                            <tr>

                                <td>
                                    @item.Id_mobil
                                </td>
                                <td>
                                    @item.NamaMobil
                                </td>
                                <td>
                                    @item.Merk
                                </td>
                                <td>
                                    @item.Status
                                </td>
                                <td>
                                    @item.Harga
                                </td>
                                <td>
                                    <img src="~/FileFoto/@item.ImageMobil" alt="Image" width="30" />
                                </td>
                                <td>
                                    <a asp-action="Ubah" asp-route-id="@item.Id_mobil">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id_mobil">Details</a>
                                    <a asp-action="Hapus" asp-route-id="@item.Id_mobil" title="Keluar" style="color:red"
                                       onclick="if (!confirm('Yakin Akan Menghapus Data Ini ? ')) { return false;}">Delete</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

