@model PinjamDashboard

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <div class="card-header">
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID Peminjaman</th>
                            <th>ID Member</th>
                            <th>Image</th>
                            <th>Nama Member</th>
                            <th>Tgl Pinjam</th>
                            <th>Tgl Kembali</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.pinjamm)
                        {
                        <tr>

                            <td>
                                @item.Id_Peminjaman
                            </td>
                            <td>
                                @item.Id_Member
                            </td>
                            <td>
                                <img src="@item.Image" alt="Image" width="100" height="120" />
                            </td>
                            <td>
                                @item.NamaMember
                            </td>
                            <td>
                                @item.Tgl_Pinjam
                            </td>
                            <td>
                                @item.Tgl_Kembali
                            </td>

                            <td>
                                <a asp-controller="Paket" asp-action="Ubah" asp-route-id="@item.Id_Peminjaman">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id_Peminjaman">Details</a>
                                <a asp-action="Hapus" asp-route-id="@item.Id_Peminjaman" title="Keluar" style="color:red"
                                   onclick="if (!confirm('Yakin Akan Menghapus Data Ini ? ')) { return false;}">Delete</a>
                            </td>
                        </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



