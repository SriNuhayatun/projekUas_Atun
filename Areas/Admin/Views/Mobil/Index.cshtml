@model IEnumerable<Mobil>;
@{
    Layout = "_AdminLayout";
}
<div class="page-header">
    <h1 class="page-title">Data Mobil</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Mobil" asp-action="Index">Data Mobil</a></li>
            <li class="breadcrumb-item active" aria-current="page"> Data Mobil</li>
        </ol>
    </nav>
</div>
<a class="nav-link" asp-action="CreateMobil">
    <i class="mdi mdi-plus menu-icon"> </i>
    <span class="menu-title">Buat Data Baru</span>
</a>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <div class="card-header">
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID Mobil</th>
                            <th>Image</th>
                            <th>Nama Mobil</th>
                            <th>Merk</th>
                            <th>Status</th>
                            <th>Harga</th>
                            <th>Aksi</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.Id_mobil
                                </td>
                                <td>
                                    <img src="@item.ImageMobil" alt="Image" width="100" height="120" />
                                </td>
                                <td>
                                    @item.NamaMobil
                                </td>
                                <td>
                                    @item.Merk
                                </td>
                                <td>
                                    @item.Status
                                </td>
                                <td>
                                    @item.Harga
                                </td>

                                <td>
                                    <a asp-action="Ubah" asp-route-id="@item.Id_mobil"><i class="mdi mdi-pencil menu-icon icon-md text-success" style="color:dodgerblue"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id_mobil"><i class="mdi mdi-eye menu-icon icon-md text-success" style="color:dodgerblue"></i></a>
                                    <a asp-action="Hapus" asp-route-id="@item.Id_mobil" title="Keluar" style="color:red"
                                       onclick="if (!confirm('Yakin Akan Menghapus Data Ini ? ')) { return false;}"><i class="mdi mdi-delete menu-icon icon-md text-success" style="color:blue"></i></a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
