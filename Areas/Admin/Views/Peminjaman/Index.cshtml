@model IEnumerable<Db_Peminjaman>
@{
    Layout = "_AdminLayout";
}
<div class="page-header">
    <h1 class="page-title">Data Transaksi</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"> Data Transaksi</li>
        </ol>
    </nav>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive" >
                <div class="card-header">
                </div>
                <table class="table table-striped" id="tb-datatable">
                    <thead>
                        <tr>
                            <th>ID Peminjaman</th>
                            <th>ID Member</th>
                            <th>Image</th>
                            <th>Nama Member</th>
                            <th>Tgl Pinjam</th>
                            <th>Tgl Kembali</th>
                            <th>Aksi</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.Id_Peminjaman
                                </td>
                                <td>
                                    @item.Id_Member
                                </td>
                                <td>
                                    <img src="@item.Image" alt="Image" width="100" height="120" />
                                </td>
                                <td>
                                    @item.NamaMember
                                </td>
                                <td>
                                    @item.Tgl_Pinjam
                                </td>
                                <td>
                                    @item.Tgl_Kembali
                                </td>

                                <td>
                                    <a asp-action="Ubah" asp-route-id="@item.Id_Peminjaman"><i class="mdi mdi-pencil menu-icon icon-md text-success" style="color:dodgerblue"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id_Peminjaman"><i class="mdi mdi-eye menu-icon icon-md text-success" style="color:dodgerblue"></i></a>
                                    <a asp-action="Hapus" asp-route-id="@item.Id_Peminjaman" title="Keluar" style="color:red"
                                       onclick="if (!confirm('Yakin Akan Menghapus Data Ini ? ')) { return false;}"><i class="mdi mdi-delete menu-icon icon-md text-success" style="color:blue"></i></a>
                                </td>
                            </tr>

                        }

                    </tbody>
                    
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tb-datatable').DataTable(
                {
                    dom: 'Bfrtip',
                    buttons: [
                        'print',
                    ]
                }
            );
        });
    </script>
}

