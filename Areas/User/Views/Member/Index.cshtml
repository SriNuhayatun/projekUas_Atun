@model BlogDashboard

@{
    Layout = "_UserLayout";
}

<div class="page-header">
    <h1 class="page-title">Data Member</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"> Data Member</li>
        </ol>
    </nav>
</div>
<a class="nav-link" asp-action="CreateMember">
    <i class="mdi mdi-plus menu-icon"> </i>
    <span class="menu-title">Buat Member Baru</span>
</a>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <div class="card-header">
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID Member</th>
                            <th>Image</th>
                            <th>Nama</th>
                            <th>Jenis Kelamin</th>
                            <th>Alamat</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.memberr)
                        {
                            <tr>

                                <td>
                                    @item.Id_Member
                                </td>
                                <td>
                                    <a asp-controller="Peminjaman" asp-action="CreatePeminjaman" asp-route-id="@item.Id_Member">
                                        <img src="@item.Image" alt="Image" width="100" height="120" />
                                    </a>
                                </td>
                                <td>
                                    @item.NamaMember
                                </td>
                                <td>
                                    @item.JenisKelamin
                                </td>
                                <td>
                                    @item.Alamat
                                </td>

                                <td>
                                    <a asp-action="Ubah" asp-route-id="@item.Id_Member"><i class="mdi mdi-pencil menu-icon icon-md text-success" style="color:dodgerblue"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id_Member"><i class="mdi mdi-eye menu-icon icon-md text-success" style="color:dodgerblue"></i></a>
                                    <a asp-action="Hapus" asp-route-id="@item.Id_Member" title="Keluar" style="color:red"
                                       onclick="if (!confirm('Yakin Akan Menghapus Data Ini ? ')) { return false;}"><i class="mdi mdi-delete menu-icon icon-md text-success" style="color:blue"></i></a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

